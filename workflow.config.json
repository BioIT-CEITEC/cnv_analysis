{
  "workflow_description": {
    "name":"structural_var_call",
    "version": 1.0,
    "label":"Structural variant calling 2",
    "type":"var_call",
    "inputs":[
      "mapped/{sample}.bam*"
    ],
    "outputs":[
      "variant_calls/*",
      "final_CNV_calls/*",
      "cnv_sv/final_report.html"
    ],
    "report_index": "cnv_sv/final_report.html",
    "reports":[
      "cnv_sv/final_report.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "reference",
    "lib_ROI"
  ],
  "gui_params" : {
    "primary": {
      "tumor_normal_paired": {
        "label": "Tumor-normal paired samples",
        "type": "bool",
        "default": false
      }
    },
    "detailed": {
      "use_gatk_cnv": {
        "label": "Use GATK_cnv for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_cnvkit": {
        "label": "Use CNVkit for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_manta": {
        "label": "Use Manta for variant calling.",
        "type": "bool",
        "default": true
      }
    },
    "samples": {
      "donor": {
        "label": "Patient ID",
        "type": "string",
        "default": ""
      },
      "tumor_normal": {
        "label": "Tumor or normal",
        "type": "enum",
        "default": "normal",
        "list": {
          "tumor": "tumor",
          "normal": "normal"
        }
      }
    }
  }
}

