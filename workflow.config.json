{
  "workflow_description": {
    "name":"cnv_analysis",
    "version": 1.0,
    "label":"CNV analysis",
    "type":"var_call",
    "run_parameters": {
      "cpu": 31,
      "memory": 65
    },

    "inputs":[
      "mapped/{sample}.bam*"
    ],
    "outputs":[
      "CNV_varcalls/*",
      "logs/*"
    ],
    "inputs_optional":[
      "cohort_data/cohort_cnv_info.tar.gz"
    ],
    "outputs_optional":[
      "cohort_data/cohort_cnv_info.tar.gz"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "reference",
    "lib_ROI"
  ],
  "gui_params" : {
    "primary": {
      "calling_type": {
        "label": "Calling type",
        "type": "enum",
        "default": "germline",
        "list": {
          "germline": "Germline",
          "tumor_100": "Somatic 100% purity ",
          "tumor": "Somatic"
        }
      },
      "contain_normal_samples": {
        "label": "Samples include samples for CNV normalization.",
        "type": "bool",
        "default": true
      }
    },
    "detailed": {
      "wgs_bin_size": {
        "label": "Bin size to split genome to in WGS",
        "type": "int",
        "default": 500000
      },
      "use_gatk_cnv": {
        "label": "Use GATK_cnv for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_cnvkit": {
        "label": "Use CNVkit for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_jabCoNtool": {
        "label": "Use jabCoNtool for variant calling.",
        "type": "bool",
        "default": true
      },
      "jabCoNtool_use_snps": {
        "label": "Use snps allelic frequency.",
        "type": "bool",
        "default": true
      },
      "jabCoNtool_predict_TL": {
        "label": "Predict tumor DNA fraction in somatic samples.",
        "type": "bool",
        "default": true
      },
      "jabCoNtool_normalize_to_GC": {
        "label": "Normalize read count to GC content for WGS.",
        "type": "bool",
        "default": true
      },
      "jabCoNtool_remove_centromeres": {
        "label": "Remove centromere regions in WGS.",
        "type": "bool",
        "default": true
      },
      "max_CNV_occurance_in_cohort": {
        "label": "Maximal occurance of CNV in cohort for it not to be filtered. As ratio of cohort size in percent.",
        "type": "int",
        "default": 100
      },
      "use_control_freec": {
        "label": "Use Control-FREEC for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_manta": {
        "label": "Use Manta for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_gridss": {
        "label": "Use GRIDSS for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_delly": {
        "label": "Use Delly2 for variant calling.",
        "type": "bool",
        "default": true
      },
      "use_cohort_data": {
        "label": "Load coverage data from previous experiments for normal estimation. Need file: cohort_data/cohort_cnv_info.tar.gz",
        "type": "bool",
        "default": false
      },
      "create_cohort_data": {
        "label": "Save info about coverage data to the cohort_cnv_info file. (include loaded cohort data)",
        "type": "bool",
        "default": true
      }
    },
    "samples": {
    }
  }
}

